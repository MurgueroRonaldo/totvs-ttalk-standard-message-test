{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/StabilityControl/V1/1_000/jsonschema/schemas/StabilityControl_1_000.json#",
	"info": {
		"description": "Controle de Estabilidade (StabilityControl) para produtos TOTVS",
		"version": "1.000",
		"title": "StabilityControl",
		"contact": {
			"name": "T-Talk",
			"url": "https://api.totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "StabilityControl",
				"description": "Estabilidade",
				"segment": "Recursos Humanos"
			},
			"productInformation": [
                {
                    "product": "Protheus",
                    "contact": "marcia.moura@totvs.com.br",
                    "description": "Product Owner RH - Protheus",
                    "adapter": ""
                },
                {
                    "product": "RM",
                    "contact": "donaldson.nunes@totvs.com.br",
                    "description": "Product Owner PTO - RM",
                    "adapter": "StabilityControl"
                },
                {
                    "product": "Datasul",
                    "contact": "fabio.abrao@totvs.com.br",
                    "description": "Product Owner RH - Datasul",
                    "adapter": ""
                }
			]
		}
	},
	"definitions": {
		"PagedStabilityControl": {
			"description": "Período de Estabilidade",
			"type": "object",
			"allOf": [
				{
					"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
				},
				{
					"$ref": "#/definitions/StabilityControl"
				}
			]
		},
		"StabilityControl": {
			"description": "Período de Estabilidade",
			"type": "object",
			"properties": {
				"items": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/StabilityControlInfo"
					}
				}
			}
		},
		"StabilityControlInfo": {
			"description": "Objeto de Período de Estabilidade com ID Identificador",
			"type": "object",
			"allOf": [
                {
                    "id": {
                        "description": "Chave única do registro de Período de Estabilidade",
                        "type": "string",
                        "x-totvs": [
                            {
                                "product": "RM",
                                "available": true,
                                "field": "PESTABILIDADE.CODCOLIGADA|PESTABILIDADE.CODIGO",
                                "type": "string",
                                "required": true
                            },
							{
								"product": "PROTHEUS",
								"field": "TMP.EMPRESA|RFX.RFX_FILIAL|TMP.EMPRESA|SRA.RA_FILIAL|SRA.RA_MAT|RFX.RFX_DATAI|TMP.EMPRESA|RCC.RCC_FILIAL|RCC.CONTEU",
								"available": true,
								"note": "Período de Estabilidade da Matrícula",
								"type": "varchar",
								"length": "1",
								"required": true,
								"canUpdate": false
							},
                            {
                                "product": "DATASUL",
				"field": "ESTABIL_FUNC.CDN_EMPRESA | ESTABIL_FUNC.CDN_ESTAB | ESTABIL_FUNC.CDN_FUNCIONARIO | ESTABIL_FUNC.CDN_MOTIV_ESTABIL_FUNC | ESTABIL_FUNC.DAT_INIC_ESTABIL"
                                "available": true,
                                "field": "",
                                "type": "string",
                                "required": true
                            }
                        ]
                    }
                },
                {
                    "$ref": "#/definitions/StabilitySave"
                }
            ]
		},
		
		"StabilitySave": {
            "description": "Objeto para Período de Estabilidade",
            "properties": {
				"companyId": {
					"type": "string",
					"example": "T1",
					"description": "Código da Empresa",
					"x-totvs": [
						{
                            "product": "RM",
                            "field": "PESTABILIDADE.CODCOLIGADA",
                            "available": true,
                            "type": "integer",
                            "length": 2,
                            "required": true,
                            "canUpdate": false
                        },
						{
							"product": "PROTHEUS",
							"field": "TMP.EMPRESA",
							"available": true,
							"type": "string",
							"required": true,
							"canUpdate": false
						},
                            {
                                "product": "DATASUL",
				"field": "ESTABIL_FUNC.CDN_EMPRESA"
                                "available": true,
                                "field": "",
                                "type": "string",
                                "required": true
                            }
					]
				},
				"branchId": {
					"type": "string",
					"description": "Código da Filial",
					"example": "D MG 01",
					"x-totvs": [
						{
                            "product": "RM",
                            "field": "não possui campo físico na tabela",
                            "required": true,
                            "type": "",
                            "length": "",
                            "available": true,
                            "canUpdate": false
                        },
						{
							"product": "PROTHEUS",
							"field": "RFX.RFX_FILIAL",
							"required": true,
							"type": "string",
							"available": true,
							"canUpdate": false
						},
                            {
                                "product": "DATASUL",
				"field": "ESTABIL_FUNC.CDN_ESTAB"
                                "available": true,
                                "field": "",
                                "type": "string",
                                "required": true
                            }
					]
				},
				"employeeId": {
					"type": "string",
					"description": "Código Identificador do Funcionário",
					"example": "T1|D MG 01|000001",
					"x-totvs": [
						{
                            "product": "RM",
                            "field": "PFUNC.CODCOLIGADA|PFUNC.CHAPA",
                            "required": true,
                            "type": "varchar",
                            "available": true,
                            "canUpdate": false
                        },
						{
							"product": "PROTHEUS",
							"field": "TMP.EMPRESA|SRA.RA_FILIAL|SRA.RA_MAT",
							"required": true,
							"type": "varchar",
							"available": true,
							"canUpdate": false
						},
                            {
                                "product": "DATASUL",
				"field": "ESTABIL_FUNC.CDN_FUNCIONARIO"
                                "available": true,
                                "field": "",
                                "type": "string",
                                "required": true
                            }
					]
				},
				"startDate": {
					"type": "string",
					"format": "date",
					"description": "Data de Início",
					"example": "YYYY-MM-DDTHH:MM:SS",
					"x-totvs": [
						{
                            "product": "RM",
                            "field": "PESTABILIDADE.DATAINICIO",
                            "required": true,
                            "type": "datetime",
                            "available": true,
                            "canUpdate": true
                        },
						{
							"product": "PROTHEUS",
							"field": "RFX.RFX_DATAI",
							"required": true,
							"type": "date",
							"available": true,
							"canUpdate":  true
						},
                            {
                                "product": "DATASUL",
				"field": "ESTABIL_FUNC.DAT_INIC_ESTABIL"
                                "available": true,
                                "field": "",
                                "type": "date",
                                "required": true
                            }
					]
				},
				"endDate": {
					"type": "string",
					"format": "date",
					"description": "Data de Término",
					"example": "YYYY-MM-DDTHH:MM:SS",
					"x-totvs": [
						{
                            "product": "RM",
                            "field": "PESTABILIDADE.DATAFIM",
                            "required": true,
                            "type": "datetime",
                            "available": true,
                            "canUpdate": true
                        },
						{
							"product": "PROTHEUS",
							"field": "RFX.RFX_DATAF",
							"required": false,
							"type": "date",
							"available": true,
							"canUpdate": true
						}
						,
                            {
                                "product": "DATASUL",
				"field": "ESTABIL_FUNC.DAT_TERM_ESTABIL"
                                "available": true,
                                "field": "",
                                "type": "date",
                                "required": true
                            }
					]
				},
				"stabilityCode": {
					"type": "string",
					"description": "Tipo de Estabilidade",
					"example": "T1|D MG    |S01",
					"x-totvs": [
						{
                            "product": "RM",
                            "field": "PESTABILIDADE.CODMOTIVOESTABILIDADE",
                            "required": true,
                            "type": "varchar",
                            "available": true,
                            "canUpdate": true
                        },
						{
							"product": "PROTHEUS",
							"field": "TMP.EMPRESA|RCC.RCC_FILIAL|RCC.CONTEU",
							"required": true,
							"type": "varchar",
							"available": true,
							"canUpdate": true
						},
                            {
                                "product": "DATASUL",
				"field": "ESTABIL_FUNC.CDN_MOTIV_ESTABIL_FUNC"
                                "available": true,
                                "field": "",
                                "type": "string",
                                "required": true
                            }
					]
				}
            }
        }
    }
}


